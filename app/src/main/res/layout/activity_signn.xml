<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="app.biblipad.actArea.Sign">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:padding="45dp"
        android:layout_marginTop="-25dp"
        android:id="@+id/imageview1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_b9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/imageview1"
        android:textColor="#9C9C9C"
        android:gravity="center"
        android:id="@+id/text1"
        android:textSize="25sp"
        android:layout_marginTop="-50dp"
        android:text="A unique clutter-free\ncommunity for writers."
        android:layout_height="wrap_content" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/text1"
        android:textSize="15sp"
        android:id="@+id/jointheclub"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Join the Club"
        android:textAllCaps="false"
        android:textColor="#828282"
        android:layout_marginRight="25dp"
        android:background="@drawable/rect_d73"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/jointheclub"
        android:padding="25dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="already a member?  "
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:id="@+id/logins"
            android:textColor="#118277"
            android:textStyle="bold"/>
    </LinearLayout>



</RelativeLayout>
